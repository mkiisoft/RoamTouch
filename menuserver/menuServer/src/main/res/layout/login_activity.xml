<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical" 
    android:background="@color/forms_color_fondo_login">
    
     <ImageView
		 android:layout_width="400dp"
		 android:layout_height="100dp"
		 android:layout_marginTop="20dp"
		 android:scaleType="fitXY"	   	
		 android:src="@drawable/logo_y_marca"
		 android:layout_gravity="center_horizontal"/>   
    
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/forms_color_fondo_login" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="30dp"
		    android:paddingRight="30dp"
		    android:layout_gravity="center"	    

		    android:orientation="vertical" >
		    
		    <TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Usuario:"
			   	android:textSize="20sp"
			   	android:textColor="#333333"
			   	android:layout_marginBottom="7dp"
			     />

			<EditText
			    android:id="@+id/etUser"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_marginBottom="7dp"
			    android:background="@color/forms_color_fondo_input_text"
			    android:ems="10"
			    android:text="admin"
			    android:textColor="#000000"
			    android:textColorLink="@color/pressed_cartamaestra"
			    android:textSize="20sp" >
	
			    <requestFocus />
			</EditText>
	
			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="ContraseÃ±a:" 
			    android:textSize="20sp"
			    android:textColor="#333333"
			    android:layout_marginBottom="7dp"
			    />
	
			<EditText
			    android:id="@+id/etPassword"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@color/forms_color_fondo_input_text"
			    android:ems="10"
			    android:inputType="textPassword"
			    android:text="1234"
			    android:textColor="#000000"
			    android:textColorLink="@color/pressed_cartamaestra"
			    android:textSize="20sp" />
			
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_marginTop="20dp"
			    
			    >
				
			    <RelativeLayout 
			        android:layout_width="550dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center"
			        >

					<Button
					    android:id="@+id/btnLogin"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentLeft="true"
					    android:background="@drawable/login_fondo_bton_ingresar"/>

					<Button
					    android:id="@+id/btnLogout"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentRight="true"
					    android:background="@drawable/login_fondo_bton_salir" />
				
				</RelativeLayout>
			 </LinearLayout>
		    
	    </LinearLayout>
	    
	</FrameLayout>

</LinearLayout>